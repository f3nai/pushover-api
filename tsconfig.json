{
    "compilerOptions": {
        "target": "ES2016",
        "module": "Node16",
        "rootDir": "./src",
        "moduleResolution": "Node16",
        "resolveJsonModule": true,
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "useUnknownInCatchVariables": false,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ]
}